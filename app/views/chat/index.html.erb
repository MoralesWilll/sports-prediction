<div class="flex flex-col h-screen bg-gray-500 border-1.5 shadow-lg border-black ">
  <!-- Chat Header -->
  <header class="bg-blue-400 text-white text-center py-4 shadow-md">
    <h1 class="text-xl font-semibold">Chat Room</h1>
  </header>

    <!-- Messages Container -->
  <div
    id="messages"
    class="flex-1 overflow-y-auto bg-white p-4 shadow-inner "
  >
    <!-- Messages will appear here -->
  </div>

  <form id="message-form" class="bg-gray-100 p-4 flex items-center gap-2 ">
    <input
      id="message-input"
      type="text"
      placeholder="Type your message..."
      class="flex-1 px-4 py-2 rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-300 focus:border-blue-500"
    />
    <button
      type="submit"
      class="px-4 py-2 bg-blue-400 text-white font-medium rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-300"
    >
      Send
    </button>
  </form>
</div>
