<!-- Banner Section -->
<section class="relative h-96 bg-cover bg-center" style="background-image: url('https://images.ctfassets.net/ihs5r3ss1hry/40kTsgBQ8TOesee6qS6kpL/312a9c020ecae119bff5254026a620c0/jason-charters-IorqsMssQH0-unsplash.jpeg');">
  <div class="absolute inset-0 bg-black opacity-50"></div>
  <div class="container mx-auto px-4 flex items-center justify-center h-full relative z-10">
    <h1 class="text-white text-5xl font-bold text-center">Welcome to Soccer Predictions</h1>
  </div>
</section>

<!-- Main Content Section -->
<div class="container mx-auto py-8 flex gap-8">
  <!-- Next Matches Section -->
  <div class="w-3/4">
    <h2 class="text-2xl font-semibold mb-4">Next Matches</h2>
    <%= render partial: 'match_card', collection: @matches, as: :match %>
  </div>

  <!-- Ads Placeholder Section -->
  <div class="w-1/4 bg-gray-200 p-4 rounded-lg">
    <p class="text-gray-500 text-center">Ad Space Placeholder</p>
  </div>
</div>

<% if user_signed_in? %>
  <%= render "shared/chat" %>
<% end %>