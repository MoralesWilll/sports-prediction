<button
  id="open-chat"
  class="absolute right-3 bottom-4 py-3 px-4 gap-x-2 text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:bg-blue-700"
>
  Predictions Chat
</button>

<!-- Chat Modal -->
<div
  id="chat-modal"
  class="fixed inset-0 bg-gray-500 bg-opacity-50 flex items-center justify-center hidden z-50"
>
  <div class="flex flex-col h-[80vh] w-[90vw] md:w-[50vw] bg-gray-500 border-1.5 shadow-lg border-black rounded-lg">
    <header class="flex justify-center relative bg-blue-400 text-white text-center py-4 shadow-md">
      <h1 class="text-xl absolute font-semibold">Chat Room</h1>
      <button
        id="close-chat"
        class="ml-auto mr-2 text-white hover:text-gray-200 focus:outline-none"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-6 h-6"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </header>

    <!-- Messages Container -->
    <div
      id="messages"
      class="flex-1 overflow-y-auto bg-white p-4 shadow-inner"
    >
      <!-- Messages will appear here -->
    </div>

    <form
      id="message-form"
      class="bg-gray-100 p-4 flex items-center gap-2"
    >
      <input
        id="message-input"
        type="text"
        placeholder="Type your message..."
        class="flex-1 px-4 py-2 rounded-lg shadow-sm focus:outline-none focus:ring focus:ring-blue-300 focus:border-blue-500"
      />
      <button
        type="submit"
        class="px-4 py-2 bg-blue-400 text-white font-medium rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring focus:ring-blue-300"
      >
        Send
      </button>
    </form>
  </div>
</div>
