<div id="forgotPasswordModal"
     data-modal-target="forgotPasswordModal"
     class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm z-50 hidden opacity-0 transition-opacity duration-300 ease-in-out items-center justify-center">
  <div class="w-[400px] max-w-[400px] bg-white/20 backdrop-blur-xl shadow-2xl rounded-2xl p-8 transform -translate-y-4 transition-all duration-300 ease-out border border-white/10 hover:bg-white/30 hover:backdrop-blur-2xl">
    <h2 class="text-3xl font-bold text-center text-white mb-6 drop-shadow-md">Forgot Password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <%= render "shared/form_input", f: f, field: :email, label: "Email", field_type: :email_field, options: { autofocus: true, autocomplete: "email" } %>

      <div class="pt-4">
        <%= f.submit "Send Reset Instructions", 
            class: "w-full px-4 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02] active:scale-95" %>
      </div>
    <% end %>

    <div class="text-center mt-6">
      <%= link_to "Close", "#",
          data: { action: "click->modal#close" }, 
          class: "text-red-400 hover:text-red-300 focus:outline-none font-semibold px-4 py-2 rounded-lg hover:bg-red-50/10 transition-colors duration-200" %>
    </div>
  </div>
</div>