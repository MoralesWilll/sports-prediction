<header class="bg-white shadow-lg">
  <nav class="max-w-full mx-auto sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Left side: Logo and navigation links -->
      <div class="flex items-center">
        <%= link_to "Sports Predictions", root_path, class: "text-xl font-bold text-gray-900" %>
        <div class="ml-10 space-x-4">
          <!-- Add more navigation links as needed -->
        </div>
      </div>

      <!-- Right side: User authentication links or user info -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <!-- Display user email and logout button -->
          <span class="text-gray-900">Hello, <%= current_user.email %></span>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600" %>
        <% else %>
          <!-- Display login and sign-up links -->
          <%= link_to "Log in", new_user_session_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
        <% end %>
      </div>
    </div>
  </nav>
</header>