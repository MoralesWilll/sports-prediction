<div class="min-h-screen flex items-center justify-center w-full bg-cover bg-center bg-[url('https://static.vecteezy.com/system/resources/previews/038/804/315/large_2x/ai-generated-a-soccer-field-on-a-dark-background-free-photo.jpg')]">
  <div data-controller="modal">
  <div class="w-[400px] max-w-[400px] bg-white bg-opacity-30 backdrop-blur-lg shadow-lg rounded-2xl p-8 hover:bg-opacity-50 hover:backdrop-blur-2xl transition-all duration-300">
    <h2 class="text-4xl font-bold font-lobster text-center text-blue-900 mb-6">Welcome to <br/> Sports Predictions!</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div class="space-y-2">
        <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="space-y-2">
        <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
          <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "Log In", class: "w-full px-4 py-2 bg-blue-900 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200" %>
      </div>
    <% end %>

    <div class="mt-6 space-y-4">
      <%= form_tag(user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }) do %>
        <button type="submit" class="w-full px-4 py-2 bg-red-900 text-white font-semibold rounded-lg shadow-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-600 transition-all duration-200 flex items-center justify-center gap-4">
          <img src="<%= asset_path('logos/google.svg') %>" alt="Google Logo" class="w-6 h-6" />
          <span>Log in with Google</span>
        </button>
      <% end %>

      <%= form_tag(user_github_omniauth_authorize_path, method: :post, data: { turbo: false }) do %>
        <button type="submit" class="w-full px-4 py-2 bg-gray-800 text-white font-semibold rounded-lg shadow-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-600 transition-all duration-200 flex items-center justify-center gap-4">
          <img src="<%= asset_path('logos/github.svg') %>" alt="GitHub Logo" class="w-6 h-6" />
          <span>Log in with GitHub</span>
        </button>
      <% end %>

        <!-- Button to Trigger Sign-Up Modal -->
        <div class="mt-4 text-center">
          <%= link_to "Don't have an account? Sign up", "#", 
            data: { action: "click->modal#open" }, 
            class: "text-blue-900 font-semibold hover:text-blue-600" %>
        </div>

        
      </div>
    </div>
    <!-- Sign-Up Modal -->
        <div id="signUpModal" 
            data-modal-target="modal"
            class="fixed inset-0 bg-gray-900/60 backdrop-blur-sm z-50 hidden opacity-0 transition-opacity duration-300 ease-in-out flex items-center justify-center">
          <div class="w-[400px] max-w-[400px] bg-white/90 backdrop-blur-xl shadow-2xl rounded-2xl p-8 transform -translate-y-4 transition-all duration-300 ease-out">
            <h2 class="text-3xl font-bold text-center text-blue-900 mb-6">Sign Up</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
              html: { 
                id: "new_user_#{resource_name}", 
                class: "space-y-4",
                data: { controller: "password-validation" }
              }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="space-y-2">
                <%= f.label :email, "Email", class: "block text-sm font-semibold text-gray-700" %>
                <%= f.email_field :email, id: "user_email_#{resource_name}", autofocus: true, autocomplete: "email", 
                    class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white/50 backdrop-blur-sm" %>
              </div>

              <div class="space-y-2">
                <%= f.label :password, "Password", class: "block text-sm font-semibold text-gray-700" %>
                <% if @minimum_password_length %>
                  <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
                <% end %>
                <%= f.password_field :password, 
                    id: "user_password_#{resource_name}", 
                    autocomplete: "new-password",
                    data: { 
                      password_validation_target: "password",
                      action: "input->password-validation#validatePasswords"
                    },
                    class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white/50 backdrop-blur-sm mt-1" %>
              </div>

              <div class="space-y-2">
                <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-gray-700" %>
                <%= f.password_field :password_confirmation, 
                    autocomplete: "new-password",
                    data: { 
                      password_validation_target: "confirmation",
                      action: "input->password-validation#validatePasswords"
                    },
                    class: "block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 bg-white/50 backdrop-blur-sm" %>
                <p data-password-validation-target="error" class="text-red-500 text-sm mt-1"></p>
              </div>

              <div class="pt-4">
                <%= f.submit "Sign up", 
                    data: { password_validation_target: "submit" },
                    class: "w-full px-4 py-3 bg-blue-900 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-[1.02]" %>
              </div>
            <% end %>

            <div class="text-center mt-6">
              <%= link_to "Close", "#", 
                  data: { action: "click->modal#close" }, 
                  class: "text-red-600 hover:text-red-500 focus:outline-none font-semibold px-4 py-2 rounded-lg hover:bg-red-50 transition-colors duration-200" %>
            </div>
          </div>
        </div>
  </div>
</div>
