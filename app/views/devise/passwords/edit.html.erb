<div class="min-h-screen flex items-center justify-center w-full bg-cover bg-center bg-[url('https://static.vecteezy.com/system/resources/previews/038/804/315/large_2x/ai-generated-a-soccer-field-on-a-dark-background-free-photo.jpg')]">
  <div data-controller="modal" class="relative">
    <!-- Change Password Card -->
    <div class="w-[400px] max-w-[400px] bg-white/20 backdrop-blur-lg shadow-2xl rounded-2xl p-8 hover:bg-white/30 hover:backdrop-blur-xl transition-all duration-300 border border-white/10">
      <h2 class="text-4xl font-bold font-lobster text-center text-white mb-6 drop-shadow-md [text-shadow:_0_2px_4px_rgba(0,0,0,0.8)]">
        Change your password
      </h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <%= render "shared/form_input", f: f, field: :password, label: "New password", field_type: :password_field, options: { autofocus: true, autocomplete: "new-password" } %>
        <%= render "shared/form_input", f: f, field: :password_confirmation, label: "Confirm new password", field_type: :password_field, options: { autocomplete: "new-password" } %>

        <div>
          <%= f.submit "Change my password", class: button_class(:primary) %>
        </div>
      <% end %>

      <div class="mt-6 text-center space-y-2">
        <%= link_to "Log in", new_session_path(resource_name), class: "text-blue-600 font-semibold hover:text-blue-700 underline underline-offset-4 transition-colors duration-200 block" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 font-semibold hover:text-blue-700 underline underline-offset-4 transition-colors duration-200 block" %>
      </div>
    </div>
  </div>
</div>