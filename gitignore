# Ignore bundler config
/.bundle

# Ignore environment files (except templates)
.env*
!/.env*.erb

# Ignore logfiles and tempfiles
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore storage (uploaded files in development)
# and any SQLite databases
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Ignore public assets
/public/assets

# Ignore master key for credentials
/config/master.key

# Ignore compiled builds
/app/assets/builds/*
!/app/assets/builds/.keep
